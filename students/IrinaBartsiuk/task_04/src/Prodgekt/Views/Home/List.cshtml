@model List<ElectronicStore.Models.Product>
@{
    ViewData["Title"] = "Список товаров";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Все товары</h1>
            <p class="lead">Полный каталог нашей электроники</p>
        </div>
    </div>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@product.Category</h6>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">
                            <strong>Цена: @product.Price.ToString("C")</strong><br>
                            <small class="text-muted">В наличии: @product.Stock шт.</small>
                        </p>
                        <a href="@Url.Action("Details", "Home", new { id = product.Id })" class="btn btn-primary">Подробнее</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">На главную</a>
        </div>
    </div>
</div>