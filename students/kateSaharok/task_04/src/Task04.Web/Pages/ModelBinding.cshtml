@page
@model Task04.Web.Pages.ModelBindingModel
@{
    ViewData["Title"] = "Привязка модели";
}

<div class="container">
    <h1>Привязка модели</h1>
    <p>Демонстрация получения данных из разных источников</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Форма для отправки данных</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="name">Имя (из формы):</label>
                            <input type="text" class="form-control" id="name" name="name" value="@Model.Name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email (из формы):</label>
                            <input type="email" class="form-control" id="email" name="email" value="@Model.Email">
                        </div>
                        <div class="form-group">
                            <label for="age">Возраст (из формы):</label>
                            <input type="number" class="form-control" id="age" name="age" value="@Model.Age">
                        </div>
                        <button type="submit" class="btn btn-primary">Отправить</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Полученные данные</h5>
                </div>
                <div class="card-body">
                    @if (Model.ShowResults)
                    {
                        <h6>Данные из формы (POST):</h6>
                        <p><strong>Имя:</strong> @Model.Name</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Возраст:</strong> @Model.Age</p>
                        
                        <h6 class="mt-3">Данные из query string (GET):</h6>
                        <p><strong>ID из query:</strong> @Model.QueryId</p>
                        <p><strong>Категория из query:</strong> @Model.Category</p>
                        
                        <h6 class="mt-3">Данные из route (GET):</h6>
                        <p><strong>ID из route:</strong> @Model.RouteId</p>
                    }
                    else
                    {
                        <p>Отправьте форму или добавьте параметры в URL</p>
                        <p>Пример: /ModelBinding/123?queryId=456&category=test</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>